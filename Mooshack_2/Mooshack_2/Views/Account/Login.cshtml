<!DOCTYPE html>
<html>
<head>

    @using Mooshack_2.Models




    @model LoginViewModel
    @{
        ViewBag.Title = "Log in";
    }

    @{
        Layout = "";
    }

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<!--
<h2>@ViewBag.Title.</h2>
-->

<body>
    <div class="loginPage">
        <div class="row">
            <div class="col-md-8">
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                        @Html.AntiForgeryToken()

                       
                       


                        <!--
                        <h4>Hér kemur logo</h4>
                        -->

                        <a href="@Url.Action("Index", "Home")" title="" class="links">
                                <img class="logo centerLogo" List View" src="@Url.Content("~/content/images/mooshak2.png")">
                        </a>


                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <!--
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                            -->

                           


                            <div class="col-md-10">

                                @Html.TextBoxFor(m => m.Email, new { placeholder = Html.DisplayNameFor(n => n.Email), Class = "changeTextBox" })

                                <!--
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                -->

                            </div>
                        </div>
                        <div class="form-group" >
                            <!--
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                            -->
                            <div class="col-md-10">

                                @Html.TextBoxFor(m => m.Password, new { placeholder = Html.DisplayNameFor(n => n.Password), Class = "changeTextBox" })

                                <!--
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                -->

                            </div>
                        </div>
                        <!--
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                        </div>
                        -->
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Login" class="btn btn-default centerButton" />
                            </div>
                        </div>

                        <!--
                                        <p>
                                                r as a new user", "Register")
                                                </p>
                                                -->
