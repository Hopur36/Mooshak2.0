@model Mooshack_2.Models.ViewModels.TeacherAssignmentViewModel

@{
    ViewBag.Title = "TeacherAssingmentPage";
}

<h2>@Model.CourseName</h2>

<p>
    @Html.ActionLink("Create New Assignment", "CreateAssignment", new { CourseID = Model.CourseID })
</p>

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                StartDateTime
            </th>
            <th>
                EndDateTime
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Assignments)
        {
            <tr>

                <td>
                    @Html.ActionLink(item.Title, "TeacherAssignmentMilestonesPage", new { assignmentID = item.id})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDateTime)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditAssignment", new { assignmentID = item.id = item.id })
                    @Html.ActionLink("Delete", "DeleteAssignment", new { assignmentID = item.id, courseReturnID = item.CourseID}, new { onclick = "return confirm('Are you sure you want to delete this Assignment?')" })
                </td>
            </tr>
        }

    </table>
    </div>



