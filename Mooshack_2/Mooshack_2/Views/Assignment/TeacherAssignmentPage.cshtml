@model Mooshack_2.Models.ViewModels.TeacherAssignmentViewModel

@{
    ViewBag.Title = "TeacherAssingmentPage";
}

<h2>@Model.CourseName</h2>

<p>
    @Html.ActionLink("Create New Assignment", "CreateAssignment", new { CourseID = Model.CourseID }, new { @class = "btn btn-primary", @style = "color:white" })
</p>

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                StartDateTime
            </th>
            <th>
                EndDateTime
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Assignments)
        {
            <tr>

                <td>
                    @Html.ActionLink(item.Title, "TeacherAssignmentMilestonesPage", new { assignmentID = item.id})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDateTime)
                </td>
                <td>
                    <a href="@Url.Action("EditAssignment", new { assignmentID = item.id = item.id })">
                        <span class="glyphicon glyphicon-pencil iconEdit"></span>
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("DeleteAssignment", new { assignmentID = item.id, courseReturnID = item.CourseID})" onclick="return confirm('Are you sure you want to delete this Assignment?')">
                        <span class="glyphicon glyphicon-trash iconDelete centerButton"></span>
                    </a>
                </td>
            </tr>
        }

    </table>
    </div>

<INPUT TYPE="button" VALUE="Back" onClick="history.go(-1);" class="btn btn-primary" style="color:white">


