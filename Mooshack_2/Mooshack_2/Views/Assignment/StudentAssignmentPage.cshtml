@model Mooshack_2.Models.ViewModels.StudentAssignmentViewModel
@{
    ViewBag.Title = "StudentAssignmentPage";
}

<h3>Active Assignments</h3>

<table>
    <tr>

        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            EndDateTime
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Assignments)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDateTime)
            </td>
        </tr>
    }

</table>